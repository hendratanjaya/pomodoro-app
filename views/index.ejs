<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title%></title>
    <link rel="stylesheet" href="/css/style.css">
    <audio id="notification" src="./audio/notification.mp3"></audio>
</head>
<body>
    
    
    <div class="container">
        <div class="header">
            <h1>Pomodoro</h1>
            <button id="setting">
                Setting⚙️
            </button>
        </div>
        <hr>

        
        <div class="timerContainer">
            <div class="envControl">
                <button class="envBtn" data-choice="pomodoro" data-status="active">Pomodoro</button>
                <button class="envBtn" data-choice="longBreak" data-status="inactive">Long Break</button>
                <button class="envBtn" data-choice="shortBreak" data-status="inactive">Short Break</button>
            </div>
            <div id="timer">
                00:00
            </div>

            <button data-status="inactive" id="startBtn">START</button>

        </div>
        <hr>

        <div class="todoList">

            
            <div class="header">

                <h2>Task</h2>
                <button id="addBtn" style="font-size: 1.5rem;">+</button>
            </div>
            
            
             
            <ul class="item">
                <%let index = 0%>
                <% for (let i of tasks){ %>
                    <div class="itemContainer">
                        <div class="item">
                            <li><%=i.task%></li>
                        </div>
                        <div class="status">
                            <%=i.completed%>/<%=i.pomodoro_est%>
                            <button data-id = "<%=index%>" class="deleteBtn">❌</button>
                        </div>
        
                        
                    </div>
                    <%index++%>
                <%}%>
                
            </ul>

           
        </div>
        

    </div>
    <div class="overlay">

        <div class="popUp">
            <button class="exitBtn"> X </button>
            <h3>Customize Your Setting</h3>
            
            <div class="setting">
                <div class="inputForm">
    
                    <label for="pomodoroTxt">Pomodoro</label>
                    <input type="number" id="pomodoroTxt" min="1">
                </div>
            
                <div class="inputForm">
    
                    <label for="longBreakTxt">Long Break</label>
                    <input type="number" id="longBreakTxt" min="1">
                </div>
            
                <div class="inputForm">
    
                    <label for="shortBreakTxt">Short Break</label>
                    <input type="number"  id="shortBreakTxt" min="1">
                </div>
            </div>
            <div class="submitBtn">
    
                <button class="submit" >Apply</button>
            </div>
        </div>
    </div>

    <div class="overlay">

        <div class="popUp">
            <button class="exitBtn">X</button>
            <h3>Add new task</h3>
            <form action="" id="addList">

                <div class="addForm">

                    <div class="inputForm">

                        <label for="taskTxt">Task</label>
                        <input type="text" id="taskTxt" placeholder="example : study" required>

                    </div>

                    <div class="inputForm">
                        <label for="pomodoroEst">Pomodoro estimation</label>
                        <input type="number" id="pomodoroEst" value="1" min="1">
                    </div>

                </div>

                <div class="submitBtn">
                    <button class="submit" type="submit">Add</button>
                </div>

            </form>

        </div>

    </div>
<script src="./js/app.js" type="module"></script>
</body>
</html>